@model BankAppMvc.ViewModels.TransactionHistoryViewModel

<div style="width: 1000px; height:10000px; margin: 60px auto 30px; padding: 7px; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.3), 0 3px 2px rgba(0, 0, 0, 0.3),
inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px; background-image: url(https://www.transparenttextures.com/patterns/clean-gray-paper.png); position: relative">

    <a style="font-family:cursive; color:sandybrown; font-weight:bold; font-size:20px; margin-right:70px; margin-left:250px" asp-controller="Account" asp-action="Deposit" asp-route-id="@Model.Account.AccountId">Deposit</a>
    <a style="font-family:cursive; color:sandybrown; font-weight:bold; font-size:20px; margin-right:70px" asp-controller="Account" asp-action="Withdrawal" asp-route-id="@Model.Account.AccountId">Withdrawal</a>
    <a style="font-family:cursive; color:sandybrown; font-weight:bold; font-size:20px; margin-right:70px" asp-controller="Account" asp-action="Transaction" asp-route-id="@Model.Account.AccountId">Transaction</a>

    <p style="color:dimgrey; margin-top:30px; margin-left:100px; font-family:cursive" asp-for="@Model.Account.AccountId">Account number: @Model.Account.AccountId</p>
    <p style="color:dimgrey; font-family:cursive; margin-left:100px" asp-for="@Model.Account.Balance">Balance: @Model.Account.Balance</p>
 
    <table style="width:80%; margin: 60px auto 30px; padding: 7px; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.3), 0 3px 2px rgba(0, 0, 0, 0.3),
    inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px; background-image: url(https://www.transparenttextures.com/patterns/black-felt.png)">
        <tr style="background-color:gray; font-family:cursive; color:sandybrown;  font-weight:bold; font-size:15px">
            <th>Id</th>
            <th>Date</th>
            <th>Action</th>
            <th>procedure</th>
            <th>Amount</th>
            <th>Balance</th>
            
        </tr>

        <partial name="_TransactionRows" />

    </table>

</div>
