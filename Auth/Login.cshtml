@model BankAppMvc.ViewModels.LoginViewModel

<div style="width: 300px; height:200px; margin: 60px auto 30px; padding: 7px; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.3), 0 3px 2px rgba(0, 0, 0, 0.3), 
inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px; background-image: url(https://www.transparenttextures.com/patterns/clean-gray-paper.png); position: relative">     
    <form asp-controller="Auth" asp-action="Login" method="post">
        <div>                   
            <input style="text-decoration:none; width: 200px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%); position: relative" asp-for="@Model.UserName" type="text" placeholder="Username...">
        </div>

        <div>            
            <input style="text-decoration:none; width: 200px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%); position: relative" asp-for="@Model.Password" type="password" placeholder="Password...">
        </div>

        <button style="font-family:cursive; outline:0; width: 65px; height: 65px; position: absolute; top: 30px; right: -25px; padding: 10px; z-index: 2; background: #ffffff;   
            border-radius: 50%; box-shadow: 0 0 2px rgba(0,0,0,0.1), 0 3px 2px rgba(0,0,0,0.1), inset 0 -3px 2px rgba(0,0,0,0.2)" type="submit">Login</button>

       

    </form>

    <p>@ViewData["Message"]</p>

</div>