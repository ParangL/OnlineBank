@model BankAppMvc.ViewModels.CustomerMessageViewModel

@{

}

<div>
    <form asp-controller="Home" asp-action="NewCustomer" method="post" style="width: 400px; height:800px; margin: 60px auto 30px; padding: 7px; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.3), 0 3px 2px rgba(0, 0, 0, 0.3), 
    inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px; background-image: url(https://www.transparenttextures.com/patterns/clean-gray-paper.png); position: relative">
        
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" type="hidden" asp-for="@Model.Customer.CustomerId" />       
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.Givenname" placeholder="Name..." />              
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.Surname" placeholder="Last name..." />            
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.Streetaddress" placeholder="Address..." />        
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.City" placeholder="City..." />        
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.Zipcode" placeholder="Zipcode..." />                
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.Country" placeholder="Country..." />       
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.CountryCode" placeholder="CountryCode, SE / UK / NO" />       
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" type="text" asp-for="@Model.Customer.Birthday" placeholder="Birthday, åå-mm-dd" />      
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.NationalId" placeholder="National id..." />      
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.Telephonecountrycode" placeholder="Countrycode, 46 / 358" />       
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.Telephonenumber" placeholder="Tel..." />      
            <input style="text-decoration:none; width: 300px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)" asp-for="@Model.Customer.Emailaddress" placeholder="Email..." />
           
       
        <div style="text-decoration:none; width: 300px; margin: 10px auto 5px; margin-left:5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%)">
            <label>* Gender</label>
            <br />

            @if (Model.Customer.Gender == "female")
            {
                <input type="radio" id="female" name="Customer.Gender" value="female" checked="checked" />
                <label for="female">Weman</label>

                <input type="radio" id="male" name="Customer.Gender" value="male" />
                <label for="male">Men</label>
            }

            else if (Model.Customer.Gender == "male")
            {
                <input type="radio" id="female" name="Customer.Gender" value="female" />
                <label for="female">Weman</label>

                <input type="radio" id="male" name="Customer.Gender" value="male" checked="checked" />
                <label for="male">Men</label>
            }

            else
            {
                <input type="radio" id="female" name="Customer.Gender" value="female" />
                <label for="female">Weman</label>

                <input type="radio" id="male" name="Customer.Gender" value="male">
                <label for="male">Men</label>
            }
        </div>


        <button type="submit" style="background-color:darkgray; width:80px; margin-left:10px; font-family:cursive">Save</button>

        <a asp-controller="Home" asp-action="CustomerPage" asp-route-id="@Model.Customer.CustomerId" style="color:darkgray; font-weight:bold; font-family:cursive">Go back <-- </a>
    </form>
</div>

<p>@Model.Message</p>