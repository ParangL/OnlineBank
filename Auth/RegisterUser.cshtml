@model BankAppMvc.ViewModels.LoginViewModel

<div style="width: 300px; margin: 60px auto 30px; padding: 7px; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.3), 0 3px 2px rgba(0, 0, 0, 0.3), 
inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 5%); position: relative">
    <form style="background-color: gray; background-image: url(https://www.transparenttextures.com/patterns/clean-gray-paper.png)" asp-controller="Auth" asp-action="RegisterUser" method="post">
        <div>           
            <input style="width: 200px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%); position: relative" asp-for="UserName" placeholder="Username..." />          
        </div>

        <div>            
            <input style="width: 200px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%); position: relative" asp-for="Password" type="password" placeholder="Password" />
        </div>

        <div>            
            <input style="width: 200px; margin: 15px auto 5px; padding: 3px; outline:0; position: relative; box-shadow: 0 1px rgba(0, 0, 0, 0.25), 0 3px 7px rgba(0, 0, 0, 0.3), 
            inset 0 1px rgba(255,255,255,1),inset 0 -3px 2px rgba(0,0,0,0.25);border-radius: 5px;background: linear-gradient(#eeefef, #ffffff 10%); position: relative" asp-for="CheckPassword" type="password" placeholder="Confirm password" />
        </div>

        <div>
            <input type="radio" asp-for="RoleName" id="Admin" value="ADMIN" />
            Admin

            <input type="radio" asp-for="RoleName" id="Cashier" value="CASHIER" />
            Cashier
        </div>


        <button style="font-family:cursive; outline:0; width: 65px; height: 65px; position: absolute; top: 60px; right: -25px; padding: 10px; z-index: 2; background: #ffffff;   
            border-radius: 50%; box-shadow: 0 0 2px rgba(0,0,0,0.1), 0 3px 2px rgba(0,0,0,0.1), inset 0 -3px 2px rgba(0,0,0,0.2)" type="submit">Add</button>
    </form>
</div>

<p>@ViewData["Message"]</p>